#!/usr/bin/perl

# -samy kamkar

my @devs = @ARGV ? @ARGV : qw/bridge0 en0 en1 bridge100 vnic0 vnic1 eth0 eth1/;

#arp();

# go through each device and scan network
foreach my $dev (@devs)
{
	my ($ip) = `ifconfig $dev 2>>/dev/null` =~ /inet\s+(\S+)\.\d+\s/;

	if ($ip)
	{	
		print "Scanning $dev $ip.0/24\n";
		`nmap -sn $ip.0/24`;
		#arp();
	}
}
arp();

sub arp
{
  foreach my $match (`arp -na`)
  {
    chomp($match);
    if ($match =~ /at (\w\S+)/ && $1)
    {
      my @oui = `oui $1`;
      shift @oui;
      splice @oui, 1, 1;

      $match .= ": " . join(", ", map { s/\r//g; chomp; $_ } @oui) if @oui;
    }
    print "$match\n" unless $match =~ /\(incomplete\)/;
  }
}
__DATA__
